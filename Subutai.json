{
    "name": "${environmentName}",
    "description": "Citrus",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        { 
            "hostname": "coordinator",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "coordinator",
            "size": "${containerSize}", 
            "port-mapping": [
                {
                    "protocol": "tcp",
                    "domain": "${domain}",
                    "internal-port": "5432",
                    "external-port": "${port}"
                }
            ]
        },
        {
            "hostname": "worker",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "worker",
            "size": "${containerSize}", 
            "port-mapping": [
                {
                    "protocol": "tcp",
                    "domain": "${domain}",
                    "internal-port": "5432",
                    "external-port": "${port}"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "peer-layouts": [
        {
            "name": "coordinator",
            "peer-count": "1",
            "container-per-peer": "1"
        },
        {
            "name": "workers",
            "peer-count": "${numberOfWorkers}",
            "container-per-peer": "1"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-citrus/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain",
                "value": "${domain}"
            }
        ],
        "groups": [
            {
                "name": "cn",
                "hostnames": [
                    "coordinator"
                ]
            }, 
            {
                "name": "wn",
                "hostnames": [
                    "worker"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "citrus",
            "validation": "[a-zA-Z0-9]+"
        },
        "numberOfWorkers": {
            "description": "Enter number of worker nodes",
            "type": "int",
            "default": "2"
        },
        "domain": {
            "description": "Enter the domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "port": {
            "description": "Enter the port number",
            "type": "int",
            "default": "5432"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
