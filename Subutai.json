{
    "name": "${environmentName}",
    "description": "Citrus",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "citrus",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "peer-layout": "citrus",
            "size": "${containerSize}", 
            "port-mapping": [
                {
                    "protocol": "tcp",
                    "domain": "${domain}",
                    "internal-port": "3333",
                    "external-port": "${port}"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "peer-layouts": [
        {
            "name": "citrus",
            "peer-count": "${numberOfNodes}",
            "container-per-peer": "1"
        },
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-citrus/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain",
                "value": "${domain}"
            }
        ],
        "groups": [
            {
                "name": "citrus",
                "hostnames": [
                    "citrus"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "biab2",
            "validation": "[a-zA-Z0-9]+"
        },
        "numberOfNodes": {
            "description": "Enter number of nodes",
            "type": "int",
            "default": "3"
        },
        "domain": {
            "description": "Enter the primary domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "port": {
            "description": "Enter the port number",
            "type": "int",
            "default": "4444"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
